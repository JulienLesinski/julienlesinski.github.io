// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "tab_size": 2,
  "format_on_save": "on",
  "languages": {
    "TSX": {
      "formatter": {
        "external": {
          "command": "yarn",
          "arguments": [
            "--silent",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      },
      "format_on_save": "on"
    },
    "CSS": {
      "formatter": {
        "external": {
          "command": "yarn",
          "arguments": [
            "--silent",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      },
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "yarn",
          "arguments": [
            "--silent",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      },
      "format_on_save": "on"
    }
  }
}
